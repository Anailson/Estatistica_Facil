<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/minimum_gap">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_formula"
            android:paddingBottom="@dimen/minimum_gap"
            android:textStyle="bold"
            style="@style/TextViewLargeColored"/>

        <com.sharktech.projectprob.customview.ItemDataDetail
            android:id="@+id/fml_avg_arithmetic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/minimum_gap"/>

        <com.sharktech.projectprob.customview.ItemDataDetail
            android:id="@+id/fml_avg_arithmetic_pnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/minimum_gap"/>

        <com.sharktech.projectprob.customview.ItemDataDetail
            android:id="@+id/fml_avg_geometric"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/minimum_gap"/>

        <com.sharktech.projectprob.customview.ItemDataDetail
            android:id="@+id/fml_avg_geometric_pnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/minimum_gap"/>

        <com.sharktech.projectprob.customview.ItemDataDetail
            android:id="@+id/fml_avg_weighted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/minimum_gap"/>

        <com.sharktech.projectprob.customview.ItemDataDetail
            android:id="@+id/fml_avg_weighted_pnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/minimum_gap"/>

        <com.sharktech.projectprob.customview.ItemDataDetail
            android:id="@+id/fml_avg_quadratic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/minimum_gap"/>

        <com.sharktech.projectprob.customview.ItemDataDetail
            android:id="@+id/fml_avg_quadratic_pnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/minimum_gap"/>

        <com.sharktech.projectprob.customview.ItemDataDetail
            android:id="@+id/fml_kurtosis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/minimum_gap"/>

        <com.sharktech.projectprob.customview.ItemDataDetail
            android:id="@+id/fml_asymmetry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/minimum_gap"/>

        <com.sharktech.projectprob.customview.ItemDataDetail
            android:id="@+id/fml_deviation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/minimum_gap"/>

        <com.sharktech.projectprob.customview.ItemDataDetail
            android:id="@+id/fml_fst_quart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/minimum_gap"/>

        <com.sharktech.projectprob.customview.ItemDataDetail
            android:id="@+id/fml_snd_quart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/minimum_gap"/>

        <com.sharktech.projectprob.customview.ItemDataDetail
            android:id="@+id/fml_trd_quart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/minimum_gap"/>

        <com.sharktech.projectprob.customview.ItemDataDetail
            android:id="@+id/fml_fst_tenth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/minimum_gap"/>

        <com.sharktech.projectprob.customview.ItemDataDetail
            android:id="@+id/fml_nth_tenth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/minimum_gap"/>

        <com.sharktech.projectprob.customview.ItemDataDetail
            android:id="@+id/fml_confidence_interval_avg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/minimum_gap"/>

        <com.sharktech.projectprob.customview.ItemDataDetail
            android:id="@+id/fml_confidence_interval_prop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/minimum_gap"/>

        <com.sharktech.projectprob.customview.ItemDataDetail
            android:id="@+id/fml_confidence_interval_var"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/minimum_gap"/>
    </LinearLayout>

</ScrollView>