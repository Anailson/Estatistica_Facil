<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/minimum_gap">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            style="@style/TextViewColored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_inference" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:foregroundGravity="right"
            android:gravity="end"
            android:spinnerMode="dialog" />
        <!--

        -->
    </LinearLayout>

    <FrameLayout
        android:id="@+id/content_data_analyse"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/nav_data_analyse"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <include layout="@layout/fragment_confidence_interval" />
    </FrameLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/nav_data_analyse"
        android:layout_width="0dp"
        android:layout_height="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/menu_analyse_data" />

</android.support.constraint.ConstraintLayout>