<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/minimum_gap">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cmd_list"
            android:paddingBottom="@dimen/minimum_gap"
            style="@style/TextViewLargeColored"/>

        <com.sharktech.projectprob.customview.ItemDataDetail
            android:id="@+id/cmd_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/minimum_gap"/>

        <com.sharktech.projectprob.customview.ItemDataDetail
            android:id="@+id/cmd_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/minimum_gap"/>

        <com.sharktech.projectprob.customview.ItemDataDetail
            android:id="@+id/cmd_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/minimum_gap"/>

        <com.sharktech.projectprob.customview.ItemDataDetail
            android:id="@+id/cmd_delete_var"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/minimum_gap"/>

        <com.sharktech.projectprob.customview.ItemDataDetail
            android:id="@+id/cmd_delete_el"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/minimum_gap"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cmd_description"
            android:paddingTop="@dimen/medium_gap"
            android:paddingBottom="@dimen/minimum_gap"
            style="@style/TextViewLargeColored"/>

        <com.sharktech.projectprob.customview.ItemDataDetail
            android:id="@+id/cmd_primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/minimum_gap"/>

        <com.sharktech.projectprob.customview.ItemDataDetail
            android:id="@+id/cmd_secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/minimum_gap"/>

        <com.sharktech.projectprob.customview.ItemDataDetail
            android:id="@+id/cmd_variables"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/minimum_gap"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cmd_detail"
            android:paddingTop="@dimen/medium_gap"
            android:paddingBottom="@dimen/medium_gap"
            style="@style/TextViewLargeColored"/>

        <com.sharktech.projectprob.customview.ItemDataDetail
            android:id="@+id/cmd_new_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/minimum_gap"/>

        <com.sharktech.projectprob.customview.ItemDataDetail
            android:id="@+id/cmd_add_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/minimum_gap"/>

        <com.sharktech.projectprob.customview.ItemDataDetail
            android:id="@+id/cmd_edt_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/minimum_gap"/>

        <com.sharktech.projectprob.customview.ItemDataDetail
            android:id="@+id/cmd_del_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/minimum_gap"/>

        <com.sharktech.projectprob.customview.ItemDataDetail
            android:id="@+id/cmd_var_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/minimum_gap"/>

        <com.sharktech.projectprob.customview.ItemDataDetail
            android:id="@+id/cmd_col_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/minimum_gap"/>

        <com.sharktech.projectprob.customview.ItemDataDetail
            android:id="@+id/cmd_row_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/minimum_gap"/>

        <com.sharktech.projectprob.customview.ItemDataDetail
            android:id="@+id/cmd_val_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/minimum_gap"/>

        <com.sharktech.projectprob.customview.ItemDataDetail
            android:id="@+id/cmd_number_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/minimum_gap"/>

        <com.sharktech.projectprob.customview.ItemDataDetail
            android:id="@+id/cmd_text_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/minimum_gap"/>

        <com.sharktech.projectprob.customview.ItemDataDetail
            android:id="@+id/cmd_values_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/minimum_gap"/>
    </LinearLayout>

</ScrollView>